{
  "name": "visualizer.js",
  "version": "0.1.2",
  "description": "An HTML5 audio visualizer for mic/line-in input",
  "main": "index.js",
  "scripts": {
    "build": "browserify index.js --standalone visualizer --outfile visualizer.browser.js && npm run compress",
    "compress": "uglifyjs -c dead_code,unused visualizer.browser.js > visualizer.browser.min.js",
    "watch": "watchify index.js -v -o visualizer.browser.js --verbose --standalone visualizer"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mreinstein/visualizer.git"
  },
  "author": "Ian Harmon",
  "license": "MIT",
  "browserify": {
    "transform": [["babelify", { "presets": ["es2015"] }]]
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "uglify-js": "^2.7.5",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "get-user-media-promise": "^1.1.1",
    "raf": "^3.3.0"
  }
}
